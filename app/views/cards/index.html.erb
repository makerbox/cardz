<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Value</th>
      <th>Action</th>
      <th>Rarity</th>
      <th>Name</th>
      <th>Description</th>
      <th>Character</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.image %></td>
        <td><%= card.value %></td>
        <td><%= card.action %></td>
        <td><%= card.rarity %></td>
        <td><%= card.name %></td>
        <td><%= card.description %></td>
        <td><%= card.character %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
